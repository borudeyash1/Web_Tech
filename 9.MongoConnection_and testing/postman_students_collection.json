{
  "info": {
    "name": "Students API - Postman Collection",
    "_postman_id": "students-api-collection",
    "description": "Collection with sample requests for the Students API (GET/POST/PUT/DELETE). Set {{baseUrl}} to http://localhost:3001",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:3001" },
    { "key": "studentId", "value": "" }
  ],
  "item": [
    {
      "name": "Get all students",
      "request": {
        "method": "GET",
        "header": [],
        "url": { "raw": "{{baseUrl}}/students", "host": ["{{baseUrl}}"], "path": ["students"] }
      }
    },
    {
      "name": "Create student (POST)",
      "request": {
        "method": "POST",
        "header": [ { "key": "Content-Type", "value": "application/json" } ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"New Student\",\n  \"age\": 21,\n  \"major\": \"Computer Science\"\n}",
          "options": { "raw": { "language": "json" } }
        },
        "url": { "raw": "{{baseUrl}}/students", "host": ["{{baseUrl}}"], "path": ["students"] }
      }
    },
    {
      "name": "Get student by id",
      "request": {
        "method": "GET",
        "header": [],
        "url": { "raw": "{{baseUrl}}/students/{{studentId}}", "host": ["{{baseUrl}}"], "path": ["students","{{studentId}}"] }
      }
    },
    {
      "name": "Update student (PUT)",
      "request": {
        "method": "PUT",
        "header": [ { "key": "Content-Type", "value": "application/json" } ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Updated Name\",\n  \"age\": 22,\n  \"major\": \"Math\"\n}",
          "options": { "raw": { "language": "json" } }
        },
        "url": { "raw": "{{baseUrl}}/students/{{studentId}}", "host": ["{{baseUrl}}"], "path": ["students","{{studentId}}"] }
      }
    },
    {
      "name": "Delete student (DELETE)",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": { "raw": "{{baseUrl}}/students/{{studentId}}", "host": ["{{baseUrl}}"], "path": ["students","{{studentId}}"] }
      }
    }
  ]
}
